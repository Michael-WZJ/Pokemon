<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.michaelj.dao.PokemonBaseInfoDao">
    <select id="getByCondition" resultType="com.michaelj.domain.PokemonBaseInfo">
        <!-- Sqlite不支持concat() -->
        select * from PokeBaseInfo
        <where>
            <if test="name != null">
                name like '%'||#{name}||'%'
            </if>
            <if test="gen != null">
                and gen = #{gen}
            </if>
            <if test="prop1 != null and prop2 != null">
                and (prop1 in (#{prop1}, #{prop2}) and prop2 in (#{prop1}, #{prop2}))
            </if>
            <if test="prop1 != null xor prop2 != null">
                and (prop1 in (#{prop1}, #{prop2}) or prop2 in (#{prop1}, #{prop2}))
            </if>
        </where>
    </select>

    <update id="update">
        update PokeBaseInfo
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="gen != null">
                gen = #{gen},
            </if>
            <if test="prop1 != null">
                prop1 = #{prop1},
            </if>
            <if test="prop2 != null">
                prop2 = #{prop2},
            </if>
            <if test="nameJpn != null">
                name_jpn = #{nameJpn},
            </if>
            <if test="nameEng != null">
                name_eng = #{nameEng},
            </if>
            <if test="pic != null">
                pic = #{pic}
            </if>
        </set>
        where code = #{code}
    </update>
</mapper>